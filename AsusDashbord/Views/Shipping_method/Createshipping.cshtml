@model CreateShippingMethodsDTO

<form asp-action="Createshipping" method="post" id="createShippingForm">
    <div class="modal-header">
        <h5 class="modal-title" id="modalTitle">Create Shipping Method</h5> <!-- The title will be updated dynamically -->
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>
    <div class="modal-body">
        <div class="mb-3">
            <label asp-for="Method_Name" class="form-label"></label>
            <div class="bordered-placeholder">
            <input asp-for="Method_Name" class="form-control" placeholder="Enter Shipping Name" />
            </div>
            <span asp-validation-for="Method_Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Cost" class="form-label"></label>
            <div class="bordered-placeholder">
            <input asp-for="Cost" class="form-control" />
            </div>
            <span asp-validation-for="Cost" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Estimated_Delivery_Time" class="form-label"></label>
            <div class="bordered-placeholder">
            <input asp-for="Estimated_Delivery_Time" class="form-control" />
            </div>
            <span asp-validation-for="Estimated_Delivery_Time" class="text-danger"></span>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary" id="submitButton">Create</button> <!-- The button text will be updated dynamically -->
    </div>
</form>


<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>

<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>

<style>
    /* Black border around the placeholder */
    .bordered-placeholder {
        border: 1px solid black;
        padding: 3px;
        border-radius: 3px;
    }

</style>