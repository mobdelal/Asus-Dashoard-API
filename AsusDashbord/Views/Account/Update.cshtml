@model UpdateUserDTO



<form asp-controller="Account" asp-action="Update" method="post">
    <div class="row flex-nowrap">

        <input asp-for="Id" hidden />
        <div class="form-group col">
            <div class="bordered-placeholder">
                <input asp-for="UserName" class="" placeholder="Enter user name" />
            </div>
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
        <div class="form-group col">
            <div class="bordered-placeholder">
                <input asp-for="BirthDate" id="datepicker" type="datetime" class="date" placeholder="Enter birth date" />
            </div>
            <span asp-validation-for="BirthDate" class="text-danger"></span>
        </div>
    </div>
    <div class="row flex-nowrap">

        <div class="form-group col">
            <div class="bordered-placeholder">
                <input asp-for="Country" type="text" class="" placeholder="Enter Country" />
            </div> <span asp-validation-for="Country" class="text-danger"></span>
        </div>

        <div class="form-group col">
            <div class="bordered-placeholder">
                <input asp-for="Email" type="email" class="" placeholder="Enter Email" />
            </div> <span asp-validation-for="Email" class="text-danger"></span>
        </div>

    </div>

    <div class="row flex-nowrap">

        <div class="form-group col">
            <div class="bordered-placeholder">
                <input asp-for="City" type="text" class="" placeholder="Enter City" />
            </div>
            <span asp-validation-for="City" class="text-danger"></span>

        </div>
        <div class="form-group col">
            <div class="bordered-placeholder">
                <input asp-for="Region" type="text" class="" placeholder="Enter Region" />
            </div>
            <span asp-validation-for="Region" class="text-danger"></span>
        </div>
    </div>
    <div class="row flex-nowrap">

        <div class="form-group col">
            <div class="bordered-placeholder">
                <input asp-for="PostalCode" type="text" class="" placeholder="Enter Postal Code" />
            </div>  <span asp-validation-for="PostalCode" class="text-danger"></span>

        </div>
        <div class="form-group col">
            <div class="bordered-placeholder">
                <input asp-for="PhoneNumber" type="tel" class="" placeholder="Enter PhoneNumber" />
            </div><span asp-validation-for="PhoneNumber" class="text-danger"></span>
        
        </div>
    </div>

    <div class="form-group">
        <button type="submit" class="form-submit btn btn-outline-primary">Submit</button>
    </div>

</form>


<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>

<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>


<script type="text/javascript">
    $(".date").datepicker({
        format: "yyyy/mm/dd",
    });
    // $('#datepicker').datepicker('show');
</script>
<style>
    /* Black border around the placeholder */
    .bordered-placeholder {
        border: 1px solid black;
        padding: 1px;
        border-radius: 10px;
        margin: 5px;
    }

</style>