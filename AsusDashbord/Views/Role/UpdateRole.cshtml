@model IdentityRole<int>

<form asp-controller="Role" asp-action="UpdateRole" method="post">

    <input asp-for="Id" hidden/>
    <div class="form-group">
        <input asp-for="Name" class="form-input" placeholder="Enter Role" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="form-submit btn btn-outline-primary">Submit</button>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}