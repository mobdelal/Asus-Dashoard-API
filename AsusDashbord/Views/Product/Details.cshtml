@model ProductDTO


<div class="card">
    <div class="card-header">
        <p class="card-title">@Model.Name_EN details</p>
    </div>
    <div class="card-body">
        <p class="card-text">Name: @Model.Name</p>
        <p class="card-text">Price: @Model.Price</p>
        <p class="card-text">Qunatity: @Model.Unit_Instock</p>
        <p class="card-text">Description: @Model.Description</p>
        <p class="card-text">Description EN: @Model.Description_EN</p>
        <p class="card-text">Categories: @string.Join(",", Model.Categories);</p>
        <p class="card-text">Discounts: @string.Join(",", Model.Discounts);</p>
        
    </div>
</div> 