 
<!-- ! Sidebar -->
<aside class="sidebar">
    <div class="sidebar-start">
        <div class="sidebar-head">
            <a href="/" class="logo-wrapper" title="Home">
                <span class="sr-only">Home</span>
                <span class="icon logo" aria-hidden="true"></span>
                <div class="logo-text">
                    <span class="logo-title">Asus</span>
                    <span class="logo-subtitle">Dashboard</span>
                </div>

            </a>
            <button class="sidebar-toggle transparent-btn" title="Menu" type="button">
                <span class="sr-only">Toggle menu</span>
                <span class="icon menu-toggle" aria-hidden="true"></span>
            </button>
        </div>
        <div class="sidebar-body">
            <ul class="sidebar-body-menu">
                <li>
                    @* <a class="active" href="/"><span class="icon home" aria-hidden="true"></span>Dashboard</a> *@
                    <a class="@((ViewContext.RouteData.Values["controller"]!.ToString() == "Home" && ViewContext.RouteData.Values["action"]!.ToString() == "Index") ? "active" : "")" href="@Url.Action("Index", "Home")" title="Dashboard">
                        <span class="icon home" aria-hidden="true"></span>Dashboard
                    </a>
                </li>
                <li>
                    <a class="show-cat-btn @((ViewContext.RouteData.Values["controller"]!.ToString() == "Product" ? "active" : ""))" href="@Url.Action("Index", "Product")" title="Products">
                        <span data-feather="monitor" aria-hidden="true" style="margin-right: 7px;"></span>Products
                    </a>
                  
                </li>
                <li>
                    <a class="show-cat-btn @((ViewContext.RouteData.Values["controller"]!.ToString() == "Category" ? "active" : ""))" href="@Url.Action("GetALLCategories", "Category")" title="Categories">
                        <span data-feather="folder" aria-hidden="true" style="margin-right: 7px;"></span>Categories
                    </a>
                   
                </li>
                <li>
                    <a class="show-cat-btn @((ViewContext.RouteData.Values["controller"]!.ToString() == "Order" ? "active" : ""))" href="@Url.Action("Index", "Order")" title="Orders">
                        <i data-feather="shopping-cart" style="margin-right: 7px;"></i>Orders
                    </a>
                  
                </li>
                <li>
                    <a class="show-cat-btn @((ViewContext.RouteData.Values["controller"]!.ToString() == "Account" ? "active" : ""))" href="@Url.Action("Index", "Account")" title="Users">
                        <i data-feather="users" style="margin-right: 7px;"></i>Users
                    </a>
                    <ul class="cat-sub-menu">
                     
                    </ul>
                </li>
                <li>
                    <a class="show-cat-btn @((ViewContext.RouteData.Values["controller"]!.ToString() == "SpecificationKey" ? "active" : ""))" href="@Url.Action("Index", "SpecificationKey")" title="Specifications">
                        <span data-feather="cpu" aria-hidden="true" style="margin-right: 7px;"></span>Specifications
                    </a>
                </li>
                <li>
                    <a class="show-cat-btn @((ViewContext.RouteData.Values["controller"]!.ToString() == "Role" ? "active" : ""))" href="@Url.Action("Index", "Role")" title="Roles">
                        <i data-feather="shield" class="roles-icon"></i>  Roles
                    </a>
                </li>
                <li>
                    <a class="show-cat-btn @((ViewContext.RouteData.Values["controller"]!.ToString() == "Shipping_method" ? "active" : ""))" href="@Url.Action("Index", "Shipping_method")" title="Shipping Methods">
                        <i data-feather="truck" style="margin-right: 7px;"></i>Shipping Methods
                    </a>
                </li>
                <li>
                    <a class="show-cat-btn @((ViewContext.RouteData.Values["controller"]!.ToString() == "PaymentMethod" ? "active" : ""))" href="@Url.Action("Index", "PaymentMethod")" title="Payment Method">
                        <i data-feather="credit-card" style="margin-right: 7px;"></i>Payment Method
                    </a>
                </li>  
                <li>
                    <a class="show-cat-btn @((ViewContext.RouteData.Values["controller"].ToString() == "Discount" ? "active" : ""))" href="@Url.Action("Index", "Discount")" title="Discount">
                        <i data-feather="tag" class="discount-icon"></i>Discount
                    </a>
                </li>
            </ul>
            
         
        </div>
    </div>
    <div class="sidebar-footer">
        <a href="##" class="sidebar-user">
            <span class="sidebar-user-img">
                <picture>
                    <source srcset="~/img/avatar/Admin.png" type="image/png">
                    <img src="./img/avatar/Admin.png" alt="Logo Image">
                </picture>
            </span>
            <div class="sidebar-user-info">
                <span class="sidebar-user__title">Admin</span>
                <span class="sidebar-user__subtitle"></span>
            </div>
        </a>
    </div>
</aside>